@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = null;
    var siteSettings = Model.Root().FirstChild<SiteSettings>();

    string styleAttribute = "";

    // Get the background image from pageSettingsBackgroundImagePicker
    var backgroundImage = Model.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("pageSettingsBackgroundImagePicker");

    if (backgroundImage != null)
    {
        styleAttribute = $"background-image: url({backgroundImage.MediaUrl()});background-color:#f3f7fc";
    }

}

<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <partial name="Head/_meta" />


    <link href="~/css/index.css" rel="stylesheet" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />

    <!-- Start Google Fonts - Lato -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <!-- End Google Fonts - Lato -->

</head>
<body data-bgimage="@backgroundImage?.MediaUrl()" style="@styleAttribute">   
    <div class="document d-flex flex-column justify-content-between">
        <!-- START BANNER -->
        @if (siteSettings?.ShowBanner ?? true)
        {
            @await Html.PartialAsync("layout/Banner")
        }
        <!-- END BANNER -->

        <!-- START HEADER -->
        @await Html.PartialAsync("layout/Header")
        <!-- END HEADER -->
      
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>

        <!-- START FOOTER -->
        @await Html.PartialAsync("layout/Footer")
        <!-- END FOOTER -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <!-- Add Bootstrap Icons CDN if not already included -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <script src="~/js/theme-toggler.js"></script>
</body>
</html>